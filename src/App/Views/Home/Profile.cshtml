@{ ViewData["Title"] = "Home Page"; }
@using Microsoft.AspNetCore.Identity
@using Domain.Entities
@inject UserManager<User> UserManager
<main>
    <div class="body_layout">
        <section class="profile_container">
            <div class="profile_container_left">
                <h2>PROFIL</h2>
                <h3>Právě přihlášen jako:</h3>
                <h3>@UserManager.GetUserName(User)</h3>
            </div>
            <div class="profile_container_right">
                <form>
                    <div>
                        <label for="profile_nameR">Jméno</label>
                        <input id="profile_nameR" type="text" value="Name" readonly>
                    </div>
                    <div>
                        <label for="profile_surnameR">Přijmení</label>
                        <input id="profile_surnameR" type="text" value="Surname" readonly>
                    </div>
                    <div>
                        <label for="profile_countryR">Stát</label>
                        <input id="profile_countryR" type="text" value="Country" readonly>
                    </div>
                    <div>
                        <label for="profile_cityR">Město</label>
                        <input id="profile_cityR" type="text" value="City" readonly>
                    </div>
                    <div>
                        <label for="profile_streetR">Ulice</label>
                        <input id="profile_streetR" type="text" value="Street" readonly>
                    </div>
                    <div>
                        <label for="profile_street2R">Číslo popisné</label>
                        <input id="profile_street2R" type="text" value="Street2" readonly>
                    </div>
                    <div>
                        <label for="profile_postal_codeR">PSČ</label>
                        <input id="profile_postal_codeR" type="text" value="Postal code" readonly>
                    </div>
                    <div>
                        <label for="profile_emailR">E-mail</label>
                        <input id="profile_emailR" type="email" value="email" readonly>
                    </div>
                    <div>
                        <label for="profile_phoneNumberR">Telefon</label>
                        <input id="profile_phoneNumberR" type="tel" value="PhoneNumber" readonly>
                    </div>
                    <div>
                        <label for="profile_passwordR">Heslo</label>
                        <input id="profile_passwordR" type="password" value="Password" readonly>
                    </div>
                    <button>Nastavení profilu</button>
                </form>
            </div>
            <div class="profile_container_hidden">
                <h3>Nastavení profilu</h3>
                <form>
                    <div>
                        <label for="profile_name">Jméno</label>
                        <input id="profile_name" type="text" placeholder="Name">
                    </div>
                    <div>
                        <label for="profile_surname">Přijmení</label>
                        <input id="profile_surname" type="text" placeholder="Surname">
                    </div>
                    <div>
                        <label for="profile_username">Username</label>
                        <input id="profile_username" type="text" placeholder="@UserManager.GetUserName(User)">
                    </div>
                    <div>
                        <label for="profile_country">Stát</label>
                        <input id="profile_country" type="text" placeholder="Country">
                    </div>
                    <div>
                        <label for="profile_city">Město</label>
                        <input id="profile_city" type="text" placeholder="City">
                    </div>
                    <div>
                        <label for="profile_street">Ulice</label>
                        <input id="profile_street" type="text" placeholder="Street">
                    </div>
                    <div>
                        <label for="profile_street2">Číslo popisné</label>
                        <input id="profile_street2" type="text" placeholder="Street2">
                    </div>
                    <div>
                        <label for="profile_postal_code">PSČ</label>
                        <input id="profile_postal_code" type="text" placeholder="Postal code">
                    </div>
                    <div>
                        <label for="profile_email">E-mail</label>
                        <input id="profile_email" type="email" placeholder="email">
                    </div>
                    <div>
                        <label for="profile_phoneNumber">Telefon</label>
                        <input id="profile_phoneNumber" type="tel" placeholder="PhoneNumber">
                    </div>
                    <div>
                        <label for="profile_password">Heslo</label>
                        <input id="profile_password" type="password" placeholder="Password">
                    </div>
                    <button>Zavřít a uložit</button>
                </form>
            </div>
        </section>
        <section class="profile_container_favourite_list">
            <h2>Seznam oblíbených</h2>
            <div class="profile_favourite_list_item_container">
                <div class="profile_favourite_list_item">
                    oblibena polozka
                </div>
            </div>
        </section>
    </div>
</main>