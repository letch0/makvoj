        </svg>
    </div>
    <div class="body_layout">
        <div class="tours_list">
            @for (var x = 0; x < 3; x++)
            {
                <section class="tour_item">
                    <div class="tour_column1">
                        <img class="picture-product" src="~/resources/images/placeholder.jpg" alt="image">
                    </div>
                    <div class="tour_column2">
                        <h2 class="item_column2_h1">Premade Package Name</h2>
                        <div class="tour_column2_flex">
                            <h3>Destination Country, D.Name</h3>
                            <h4>Počet osob: number of beds</h4>
                            <div class="tag_container">
                                <p class="tag">tagggg</p>
                                @for (var y = 0; y < 8; y++)
                                {
                                    <p class="tag">tag</p>
                                }
                                <p class="tag">pšouk</p>
                            </div>
                            <a asp-action="DetailTours" asp-controller="Home">
                                <b>PODROBNOSTI</b>
                            </a>
                        </div>
                    </div>
                    <div class="tour_column3">
                        <p>Dostupné: from Room available</p>
                        <p>Rating: from destination rating</p>
                        <p>starting date - end date</p>
                        <h3>Cena: room_per_night * (days-1)</h3>
                        <button class="logform_action_button" type="submit">REZERVOVAT</button>
                    </div>
                </section>
            }
        </div>
    </div>
</main>