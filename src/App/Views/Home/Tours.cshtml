        <div class="tours_category_search">
            <form class="tours_category_search_flex">
                <div class="main_searcher_subgroup main_searcher_input_box">
                    <label>Kam jedete:</label>
                    <input class="tours_category_search_text" type="text" size="15" placeholder="Region nebo hotel"/>
                </div>
                <div class="main_searcher_subgroup main_searcher_input_box">
                    <label>Příjezd:</label>
                    <input class="main_searcher_input_date" type="date" size="10">
                </div>
                <div class="main_searcher_subgroup main_searcher_input_box">
                    <label>Odjezd:</label>
                    <input class="main_searcher_input_date" type="date" size="10">
                </div>
                <div class="main_searcher_subgroup main_searcher_input_box">
                    <label>Počet osob:</label>
                    <input class="tours_category_search_number" type="number" min="0" max="10" value="0" size="15">
                </div>
                <div class="main_searcher_subgroup main_searcher_input_box">
                    <label>Pokoje:</label>
                    <input class="tours_category_search_number" type="number" min="0" max="10" value="0" size="15">
                </div>
                <div class="main_searcher_subgroup main_searcher_input_box input_checkbox">
                    <label>Děti</label>
                    <input class="main_searcher_input_checkbox" type="checkbox">
                </div>
                <button class="tours_category_search_button" type="submit">HLEDAT</button>
            </form>
