@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Domain.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>-->
    <link rel="stylesheet" href="~/resources/css/site.css" asp-append-version="true"/>
    <!--<link rel="stylesheet" href="~/App.styles.css" asp-append-version="true"/>-->
    <link rel="icon" href="~/resources/images/logo_cestovka_yell.png" type="image/x-icon"/>
</head>
<body>
    <div id="top_line">
    <!--? finish button link to either another page or pop up-->
        @if(SignInManager.IsSignedIn(User))
        {
            <h3>@UserManager.GetUserName(User)</h3>
            <a id="logout_button" asp-controller="Account" asp-action="Logout" asp-route-returnurl="@ViewData["ReturnUrl"]">LOGOUT</a>
        }
        else
        {
            <a id="login_button" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">LOGIN</a>
            <a id="sign_up_button" asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">SIGN UP</a>
        }
    </div>
    <header>
        <a href="index.html">
            <img id="logo" src="~/resources/images/logo_cestovka_purp.png" alt="logo_image" height="60" width="60">
        </a>
        <a id="company_name" asp-controller="Home" asp-action="Index">
            Name of the agency
        </a>
    </header>
    <nav id='menu'>
        <input type='checkbox' id='responsive-menu' onclick='updatemenu()'><label></label>
        <ul>
            <!--odkaz to Index.cshtml-->
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a class='dropdown-arrow' href='error.html'>Products</a>
                <ul class='sub-menus'>
                    <li><a href='error.html'>Products 1</a></li>
                    <li><a href='error.html'>Products 2</a></li>
                    <li><a href='error.html'>Products 3</a></li>
                    <li><a href='error.html'>Products 4</a></li>
                </ul>
            </li>
            <li><a asp-controller="Home" asp-action="Results">Destinations</a></li>
            <li><a class='dropdown-arrow' href='error.html'>Services</a>
                <ul class='sub-menus'>
                    <li><a href='error.html'>Services 1</a></li>
                    <li><a href='error.html'>Services 2</a></li>
                    <li><a href='error.html'>Services 3</a></li>
                </ul>
            </li>
            <li><a href='contact.html'>Kontakt</a></li>
        </ul>
    </nav>

